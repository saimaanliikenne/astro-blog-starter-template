---
import PageLayout from '../layouts/PageLayout.astro';
---

const title = "Blogi - Matkatoimisto Saimaan Liikenne OY";
const description = "Lue uusimmat matkauutiset ja tarinat Saimaan rannoilta ja kauempaa.";
---

<PageLayout title={title} description={description}>
  <section class="blog-hero">
    <div class="container">
      <h1>Matkablogi</h1>
      <p>Inspiraatiota seuraavalle matkallesi</p>
    </div>
  </section>

  <section class="blog-grid container">
    {blogPosts.map((post) => (
      <article class="post-card">
        <div class="image-wrapper">
          <img src={post.image} alt={post.title} loading="lazy" />
        </div>
        <div class="post-content">
          <time datetime={post.date}>
            {new Date(post.date).toLocaleDateString('fi-FI')}
          </time>
          <h2>{post.title}</h2>
          <p>{post.description}</p>
          <a href="#" class="read-more">Lue lisää →</a>
        </div>
      </article>
    ))}
  </section>
</PageLayout>

<style>
.blog-hero {
  max-width: 800px;
  margin: 0 auto;
  padding: 3rem 1rem 2rem;
}

.blog-hero p {
  font-size: 1.1rem;
  line-height: 1.7;
}

.blog-list {
  padding: 3rem 1rem;
}

.blog-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 1.5rem;
  margin-top: 1.5rem;
}

.blog-card {
  border: 1px solid #e5e7eb;
  border-radius: 12px;
  padding: 1.5rem;
  background: #ffffff;
}

.blog-card h3 {
  margin-bottom: 0.5rem;
  color: #0f766e;
}

.blog-cta {
  padding: 3rem 1rem;
  text-align: center;
}

.blog-cta p {
  margin-bottom: 1.5rem;
}

.cta {
  display: inline-block;
  background: #0f766e;
  color: #ffffff;
  padding: 0.75rem 1.75rem;
  border-radius: 999px;
  text-decoration: none;
  font-weight: 500;
}

.cta:hover {
  opacity: 0.9;
}
</style>
