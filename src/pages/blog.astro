---
import PageLayout from '../layouts/PageLayout.astro';
---

const title = "Blogi - Matkatoimisto Saimaan Liikenne OY";
const description = "Lue uusimmat matkauutiset ja tarinat Saimaan rannoilta ja kauempaa.";
---

<PageLayout title={title} description={description}>
  <section class="blog-hero">
    <div class="container">
      <h1>Matkablogi</h1>
      <p>Inspiraatiota seuraavalle matkallesi</p>
    </div>
  </section>

  <section class="blog-grid container">
    {blogPosts.map((post) => (
      <article class="post-card">
        <div class="image-wrapper">
          <img src={post.image} alt={post.title} loading="lazy" />
        </div>
        <div class="post-content">
          <time datetime={post.date}>
            {new Date(post.date).toLocaleDateString('fi-FI')}
          </time>
          <h2>{post.title}</h2>
          <p>{post.description}</p>
          <a href="#" class="read-more">Lue lisää →</a>
        </div>
      </article>
    ))}
  </section>
</PageLayout>

<style>
  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .blog-hero {
    background-color: #f4f7f6;
    padding: 4rem 0;
    text-align: center;
    border-bottom: 1px solid #e0e0e0;
  }

  .blog-hero h1 {
    font-size: 3rem;
    color: #003366; /* Фирменный синий */
    margin-bottom: 0.5rem;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2.5rem;
    padding-top: 4rem;
    padding-bottom: 4rem;
  }

  .post-card {
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
  }

  .post-card:hover {
    transform: translateY(-5px);
  }

  .image-wrapper img {
    width: 100%;
    height: 220px;
    object-fit: cover;
  }

  .post-content {
    padding: 1.5rem;
  }

  time {
    font-size: 0.85rem;
    color: #666;
    text-transform: uppercase;
  }

  h2 {
    margin: 0.5rem 0;
    color: #003366;
    font-size: 1.5rem;
  }

  p {
    color: #444;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .read-more {
    font-weight: bold;
    color: #d32f2f; /* Акцентный красный (часто в турфирмах) */
    text-decoration: none;
  }

  .read-more:hover {
    text-decoration: underline;
  }
</style>
